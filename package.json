{
  "name": "tianniu-monitor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "build:watch": "turbo build:watch",
    "build": "turbo build",
    "clean": "run-s clean:build clean:caches",
    "lint": "eslint",
    "lint:style": "stylelint",
    "lint:staged": "lint-staged",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Tianniu",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --cache --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "prettier --cache --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --cache --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "@eslint/js": "9.39.2",
    "globals": "16.5.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "cspell": "9.4.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "commitizen": "4.3.1",
    "fast-glob": "3.3.3",
    "husky": "9.1.7",
    "cz-git": "1.12.0",
    "tsup": "8.5.1",
    "turbo": "2.7.2",
    "rimraf": "6.1.2",
    "npm-run-all2": "8.0.4"
  }
}
